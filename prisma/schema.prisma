generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum LoginType {
  EMAIL
  GOOGLE
  KAKAO
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  posts     Post[]    // 사용자가 작성한 게시글들
  comments  Comment[] // 사용자가 작성한 댓글들
  loginProvider LoginProvider?
  deletedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model LoginProvider {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
  email     String?   // email을 nullable로 변경
  socialId  String    // OAuth 제공자의 고유 ID
  loginType LoginType @default(EMAIL)

  @@unique([loginType, socialId])  // provider + socialId 조합으로 유니크 제약
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  comments  Comment[] // 게시글에 달린 댓글들
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  post      Post      @relation(fields: [postId], references: [id])
  postId    Int
  author    User      @relation(fields: [authorId], references: [id])
  authorId  Int
  
  // 대댓글 관련 필드 추가
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id])
  parentId  Int?
  replies   Comment[] @relation("CommentToComment")
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}